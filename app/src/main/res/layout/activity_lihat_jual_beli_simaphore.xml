<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#EBEBEB"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".jual_beli_transaksi">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"

            android:orientation="vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ffffff"
                android:src="@drawable/simaphore"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="23sp"
                android:textColor="#000000"
                android:text="Bendera Simaphore 20pcs"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:text="Rp. 400.000"
                android:textColor="#f44100"/>
            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/rating_bintang"

                    android:layout_height="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5,0"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stok Tersedia"
                    android:layout_marginLeft="120dp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Bendera simaphore terdiri dari bendera berwarna kuning dan orange dengan ukuran bendera 45 x 45
dan tongkat yang terbuat dari kayu jati berwarna polos dengan panjang 80 cm dan diameter 5 cm"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="7dp"

            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="20dp"

                android:src="@drawable/cod"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="Bayar di Tempat"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:text="                   Ongkos Kirim :    Rp.5000 - 25.000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"

                    android:layout_marginTop="5dp"
                    android:text="Get - Pram Store"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Aktif 1 jam lalu"/>
            </LinearLayout>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:id="@+id/btn_chat"
                android:src="@drawable/chat"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="#ffffff"
                android:text="Beli Sekarang"
                android:textSize="10sp"
                android:id="@+id/btn_beli_sekarang"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="#A35200"/>


        </LinearLayout>


    </LinearLayout>
</ScrollView>